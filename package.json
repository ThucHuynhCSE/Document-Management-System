{
  "name": "document-management-system",
  "version": "1.0.0",
  "description": "This is a system (API) that manages documents with users and user roles. Each document defines access rights; the document defines which roles can access it. Also, each document specifies the date it was published. It is built with NodeJS, Express and Postgres as it's database. Source code employs ES6 syntax traspiled down to ES5 using Babel.",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test istanbul cover _mocha -- -R spec server/test/**/*.spec.js --compilers js:babel-core/register",
    "start": "babel-node server.js",
    "migrate:test": "NODE_ENV=test sequelize db:migrate",
    "migrate:prod": "NODE_ENV=production sequelize db:migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela-cofor/Document-Management-System.git"
  },
  "author": "Ofor Chinedu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andela-cofor/Document-Management-System/issues"
  },
  "homepage": "https://github.com/andela-cofor/Document-Management-System#readme",
  "dependencies": {
    "babel-core": "^6.24.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.1",
    "dotenv": "^4.0.0",
    "eslint": "^3.18.0",
    "express": "^4.15.2",
    "faker": "^4.1.0",
    "gulp": "^3.9.1",
    "gulp-nodemon": "^2.2.1",
    "morgan": "^1.8.1",
    "pg": "^6.1.5",
    "pg-hstore": "^2.3.2",
    "sequelize": "^3.30.3"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.12.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "sequelize-cli": "^2.7.0",
    "should": "^11.2.1",
    "supertest": "^3.0.0"
  }
}
